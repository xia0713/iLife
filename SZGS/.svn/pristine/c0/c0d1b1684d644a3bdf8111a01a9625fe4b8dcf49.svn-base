<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="今日任务"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/linearlayout_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/answer_zxwt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_list_icon1" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_login"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/minetask_everydaylogin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="每日登录"
                                android:textSize="@dimen/textsize_title1" />

                            <TextView
                                android:id="@+id/logintask_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_button_nopadding"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="已完成"
                                android:textColor="@color/white"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/minetask_everydaylogin_more"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/list_more_img" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/logintask_recommend"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="#F7F7F6"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="每日首次登录可获得2积分"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="35dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/answer_wgxqdwt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_list_icon2" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_answer_question"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/minetask_onequestion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="回答一个问题"
                                android:textSize="@dimen/textsize_title1" />

                            <TextView
                                android:id="@+id/minetask_onequestion_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_button_nopadding"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="已完成"
                                android:textColor="@color/white"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/minetask_onequestion_hascomplete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="10/10"
                                android:textColor="@color/gray"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/minetask_onequestion_more"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/list_more_img" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/minetask_onequestion_recommend"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="#F7F7F6"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="回答一个问题可获得2积分,每日最多可获得20分"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="35dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/answer_gfxs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_list_icon3" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_answer_zan"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/minetask_givemezan"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="回答被点赞"
                                android:textSize="@dimen/textsize_title1" />

                            <TextView
                                android:id="@+id/minetask_givemezan_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_button_nopadding"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="已完成"
                                android:textColor="@color/white"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/minetask_givemezan_hascomplete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@color/gray"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/minetask_givemezan_more"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/list_more_img" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/minetask_givemezan_recommend"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#F7F7F6"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="回答被其他用户点赞一次可获得1积分，当天最高不超过10分"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="35dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/answer_glyzd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_list_icon4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_gym_top"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_gymtop"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="被管理员置顶"
                                android:textSize="@dimen/textsize_title1" />

                            <TextView
                                android:id="@+id/tv_gym_top_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_button_nopadding"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="已完成"
                                android:textColor="@color/white"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/iv_gym_top"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/list_more_img" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_gym_top"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#F7F7F6"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="回答问题被系统管理员认为为最佳答案，并在专区中置顶，回答者可获赠10分"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="35dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/answer_glyzd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/task_list_icon5" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_answer_adopt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_answer_adopt_show"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="回答被采纳"
                                android:textSize="@dimen/textsize_title1" />

                            <TextView
                                android:id="@+id/tv_answer_adopt_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_button_nopadding"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="已完成"
                                android:textColor="@color/white"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/iv_answer_adopt"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/list_more_img" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_answer_adopt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#F7F7F6"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="回答被提问者采纳为满意答案，回答者可获得系统自动赠送的10积分，并可同时获得相应的悬赏积分值"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="成就累计"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/linearlayout_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tabbar4_list_icon5" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_answer_adopt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_ljcns10_show"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="累计采纳10次"
                                android:textSize="@dimen/textsize_title1" />

                            <TextView
                                android:id="@+id/task_ljcns_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/blue_button_nopadding"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="已完成"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                            <TextView
                                android:id="@+id/task_ljcns"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@color/gray" />

                            <ImageView
                                android:id="@+id/iv_ljcn"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/list_more_img" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_njcn_notic"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#F7F7F6"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="当用户回答问题累积被采纳达到10个，将增加20积分值"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>