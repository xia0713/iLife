<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="图片仅供参考，具体以实际收到的奖品为准，奖品提供方拥有最终解析权"
                android:textColor="#bfbfbf"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/exchange_info_prize_pic_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/credit_exchange_test_pic" />

            <TextView
                android:id="@+id/exchange_info_prize_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="10元电话充值卡"
                android:textColor="#525252" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="16dp"
                android:background="#bfbfbf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="消耗积分"
                    android:textColor="#525252" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#bfbfbf" />

                <TextView
                    android:id="@+id/exchange_info_prize_cost_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="9800积分"
                    android:textColor="#525252" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#bfbfbf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="姓名"
                    android:textColor="#525252" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#bfbfbf" />

                <EditText
                    android:id="@+id/exchange_info_username_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="#525252"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#bfbfbf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="联系电话"
                    android:textColor="#525252" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#bfbfbf" />

                <EditText
                    android:id="@+id/exchange_info_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:textColor="#525252"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#bfbfbf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="详细地址"
                    android:textColor="#525252" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#bfbfbf" />

                <EditText
                    android:id="@+id/exchange_info_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="#525252"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="50dp"
                android:background="#bfbfbf" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>