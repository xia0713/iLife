<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="8dp" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf" />

    <com.szgs.bbs.common.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/answer_user_icon_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/list_avatar_default" />

    <TextView
        android:id="@+id/answer_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/answer_user_icon_iv"
        android:text="用户名"
        android:textColor="#525252"
        android:textSize="@dimen/textsize16sp" />

    <TextView
        android:id="@+id/answer_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/answer_user_icon_iv"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/answer_user_icon_iv"
        android:text="14:34"
        android:textColor="#bfbfbf" />

    <RelativeLayout
        android:id="@+id/answer_like_RL"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" >

        <ImageView
            android:id="@+id/answer_like_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_like"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/answer_like_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/answer_like_icon"
            android:text="12"
            android:textColor="#bfbfbf"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/answer_collect_RL"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@id/answer_like_RL" >

        <ImageView
            android:id="@+id/answer_collect_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_collect"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/answer_collect_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/answer_collect_icon"
            android:text="12"
            android:textColor="#bfbfbf"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/answer_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/answer_user_name_tv"
        android:layout_below="@id/answer_user_icon_iv"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="测试：的建安费德勒见过IE我福建省的烦恼"
        android:textColor="#525252"
        android:textSize="@dimen/textsize_content1" />

    <ImageView
        android:id="@+id/imgview_accept_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_icon_accept"
        android:visibility="gone" />

</RelativeLayout>