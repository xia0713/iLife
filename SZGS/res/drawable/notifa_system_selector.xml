<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><shape>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />

            <solid android:color="@color/white" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="@color/mine_blue" />
        </shape></item>
    <item android:state_checked="true"><shape>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
            <solid android:color="@color/mine_blue" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <stroke android:width="1dp" android:color="@color/mine_blue" />
        </shape></item>

</selector>
