<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
<View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/gainsboro" />
    <RelativeLayout
        android:id="@+id/rl_category_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/rl_category_top_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/list_best" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_category_top_img"
            android:text="本区精华"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/rl_category_top_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="1.2k 赞"
            android:textColor="@color/gray" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_home_hot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/hot_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/list_credit" />

        <TextView
            android:id="@+id/tv_question_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30分" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/question_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text="30回答"
            android:textColor="@color/gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_question_topline"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#bfbfbf" />

    <LinearLayout
        android:id="@+id/ll_questionitem_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <com.szgs.bbs.common.view.CircleImageView
            android:id="@+id/img_question_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/me_avatar_default"
            android:padding="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tv_question_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_username" />

                <TextView
                    android:id="@+id/tv_question_or_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_question_username"
                    android:text="提问了："
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray" />

                <ImageView
                    android:id="@+id/img_question_listedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/list_edit_selector" />
                <ImageView
                    android:id="@+id/img_solve_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:src="@drawable/list_solve_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_question_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1小时前"
                android:textSize="@dimen/textsize13sp"
                android:textColor="@color/gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_question_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_content1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_answer_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F3F3F3"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/textsize15sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/question_sum2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:gravity="bottom|right"
                    android:text="30回答"
                    android:textColor="@color/gray"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomll_fqu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_question_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_tag_selector" />

            <TextView
                android:id="@+id/tv_tagname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="纳税申报"
                android:textColor="@color/mine_blue" />
        </LinearLayout>

        <com.szgs.bbs.common.view.DrawableCenterTextView
            android:id="@+id/tv_question_toanswer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/list_add_answer"
            android:paddingBottom="5dp"
            android:text="添加回答"
            android:textColor="@color/quesetion_green" />
    </LinearLayout>

</LinearLayout>