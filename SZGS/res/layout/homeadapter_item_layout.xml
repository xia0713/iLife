<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:id="@+id/ll_home_hot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/list_hot" />

        <TextView
            android:id="@+id/tv_home_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门回答"
            android:textSize="@dimen/textsize16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_topline"
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/ll_homeitem_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.szgs.bbs.common.view.CircleImageView
            android:id="@+id/img_homeitem_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/me_avatar_default"
            android:padding="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_homeitem_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_username" />

                    <TextView
                        android:id="@+id/tv_tiwenl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="提问了："
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_homeitem_listedit"
                    android:layout_width="40dp"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_homeitem_listedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/list_edit_selector" />
                </LinearLayout>
                <ImageView
                        android:id="@+id/img_homeitem_bestanswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        android:background="@drawable/list_solve_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_homeitem_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textSize="@dimen/textsize13sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_homeitem_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_content1" />

            <TextView
                android:id="@+id/tv_homeitem_response"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/qianhuise"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="如何快速的对税务知识有一个框架式的了解"
                android:textSize="@dimen/textsize15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:id="@+id/ll_homeitem_tag"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:src="@drawable/list_tag_selector" />

            <TextView
                android:id="@+id/tv_tagname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="纳税申报"
                android:textColor="@color/mine_blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_homeitem_responsesum"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待回答"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>