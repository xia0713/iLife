<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rank_ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/content_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp" >

        <com.szgs.bbs.common.view.CircleImageView
            android:id="@+id/rank_list_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/list_avatar_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的排行"
            android:textSize="@dimen/textsize18sp" />

        <TextView
            android:id="@+id/rank_list_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/mine_blue"
            android:textSize="@dimen/textsize22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="采纳数"
            android:textSize="@dimen/textsize18sp" />

        <TextView
            android:id="@+id/rank_list_cns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/mine_blue"
            android:textSize="@dimen/textsize22sp" />
    </LinearLayout>
   <ListView 
        android:id="@+id/rank_list_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rank_ll_bottom"
       ></ListView>

</RelativeLayout>