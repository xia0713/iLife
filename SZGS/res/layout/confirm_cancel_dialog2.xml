<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/confirm_cancel_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/black"
        android:textSize="20sp" />
<TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请确认您所举报的内容"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/confirm_cancel_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="违反了用户协议或者含有不良信息"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D6D3CE" />

    <LinearLayout
        android:id="@+id/confirm_cancel_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- <Button
            android:id="@+id/confirm_cancel_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/mine_blue"
            android:textSize="18sp"/>
        <View 
            android:layout_height="wrap_content"
            android:layout_width="1px"
            android:background="#D6D3CE"
            /> -->

        <Button
            android:id="@+id/confirm_cancel_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/mine_blue"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>